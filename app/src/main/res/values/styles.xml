<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorActivityBackground</item>
    </style>

    <!-- General TextView Style-->
    <style name="generalTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- News Title Style-->
    <style name="newsTitleStyle" parent="generalTextViewStyle">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/colorItemTitle</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- News Author Style -->
    <style name="newsAuthorStyle" parent="generalTextViewStyle">
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/colorItemAuthor</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8dp</item>
    </style>

    <!-- News Date Style -->
    <style name="newsDateStyle" parent="generalTextViewStyle">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/textsize_xsmall</item>
        <item name="android:textColor">@color/colorItemDate</item>
    </style>

    <!-- News Section Style -->
    <style name="newsSectionStyle" parent="generalTextViewStyle">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/textsize_xsmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorItemSection</item>
    </style>

</resources>
